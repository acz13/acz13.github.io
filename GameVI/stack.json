{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "The Thing.",
  "data": {"url": "vega.json"},
  "mark": "bar",
  "height": 600,
  "padding": 0,
  "autosize": "fit",
  "encoding": {
    "x": {
      "field": "phase",
      "type": "ordinal",
      "scale": {"rangeStep": 40},
      "axis": {"title": null}
    },
    "y": {
      "aggregate": "sum",
      "field": "comments",
      "type": "quantitative",
      "axis": {"title": null}
    },
    "color": {"field": "player","type": "nominal","legend":null},
    "opacity": {"value": 0.7},
    "size": {"value": 39.5}
  }
}
